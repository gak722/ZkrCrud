{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "larapi/zkrcrud",
    "description": "A Laravel package to simplify the creation of RESTful APIs, similar to Orion.",
    "type": "library",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "authors": [
        {
            "name": "gufran khan",
            "email": "gak72@rediffmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "laravel/framework": "^12.0",
         "spatie/laravel-query-builder": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "larapi\\ZkrCrud\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Larapi\\Zkrcrud\\ZkrServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
